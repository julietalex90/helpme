<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.julie.rescueemergency.userHomepage">

    <Button
        android:id="@+id/btnhospital"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/hospital" />

    <Button
        android:id="@+id/btnworkshop"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnhospital"
        android:layout_marginEnd="33dp"
        android:background="@drawable/mechanics" />

    <Button
        android:id="@+id/btnpolice"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignStart="@+id/btnhospital"
        android:layout_below="@+id/btnhospital"
        android:layout_marginStart="96dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/police" />
</RelativeLayout>

